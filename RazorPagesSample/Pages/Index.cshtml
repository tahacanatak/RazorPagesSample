@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Razor Page Sample</h1>
</div>


<div>
    <h2>Customers</h2>

    <a asp-page="/Create" class="btn btn-primary mb-1">New Customer</a>

    <form method="post">
        <table class="table table-hover bg-light">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Customers)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-page="/Edit" asp-route-id="@item.Id" class="btn btn-outline-info">
                                Edit
                            </a>
                            <button type="submit" asp-route-id="@item.Id" asp-page-handler="Delete" class="btn btn-outline-danger">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>


</div>